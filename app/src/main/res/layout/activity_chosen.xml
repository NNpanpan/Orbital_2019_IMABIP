<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chosen"
    android:orientation="vertical"
    android:id="@+id/chosen_act">

    <TextView
        android:id="@+id/ev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:paddingLeft="16dp"
        android:text="Event Name"/>

    <TextView
        android:id="@+id/ev_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hostID"
        android:textSize="16dp"
        android:paddingLeft="16dp"
        android:textStyle="italic"
        android:textColor="@color/Gray"/>

    <TextView
        android:id="@+id/ev_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="16dp"
        android:text="Time"/>

    <TextView
        android:id="@+id/ev_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:text="Venue"/>

    <TextView
        android:id="@+id/ev_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:text="Description"/>

    <TextView
        android:id="@+id/ev_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:text="Party size"/>

    <TextView
        android:id="@+id/save_to_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:text="Save to calendar?"
        android:textStyle="italic"
        android:textColor="@color/CadetBlue"/>

    <TextView
        android:id="@+id/joined_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOINED"
        android:textColor="@color/Green"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/ev_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Join"
        android:visibility="gone"/>

    <Button
        android:id="@+id/ev_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Edit"
        android:visibility="gone"/>

    <Button
        android:id="@+id/ev_rehost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Re-host"
        android:visibility="gone"/>
</LinearLayout>