<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chosen"
    android:orientation="vertical"
    android:id="@+id/chosen_act">

    <TextView
        android:id="@+id/ev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Event Name"/>

    <TextView
        android:id="@+id/ev_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hostID"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/ev_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"/>

    <TextView
        android:id="@+id/ev_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue"/>

    <TextView
        android:id="@+id/ev_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"/>

    <TextView
        android:id="@+id/ev_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Party size"/>

    <Button
        android:id="@+id/ev_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Join"/>
</LinearLayout>